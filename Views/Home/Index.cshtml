@model IEnumerable<Pizzas>

@{
    ViewData["Title"] = "Home Page";
}
<style>
    .promo-blink {
        animation: gradientShift 8s ease infinite alternate;
    }

    .animate-blink {
        animation: blinkText 1s infinite alternate;
    }

 {
        opacity: 0.7;
    }

    }

    {
        background: linear-gradient(to right, #ff416c, #ff4b2b);
    }

    100% {
        background: linear-gradient(to right, #ff4b2b, #ff416c);
    }

    <style >
    .review-marquee {
        position: relative;
        height: 100px;
    }

    .review-track {
        animation: scrollReviews 30s linear infinite;
        white-space: nowrap;
    }

    .review-item {
        min-width: 300px;
        font-weight: 500;
        color: #333;
        background-color: #fff9f0;
    }

        transform: translateX(0);
    }

    100% {
        transform: translateX(-50%);
    }

    }
</style>
<!-- ==== Promo Section ==== -->
<section class="py-5 text-white text-center promo-blink" style="background: linear-gradient(to right, #ff416c, #ff4b2b);">
    <div class="container">
        <h2 class="fw-bold mb-3 animate-blink">🎁 Ưu đãi hấp dẫn trong tuần!</h2>
        <p class="lead">Mua 1 tặng 1 cho tất cả pizza size L từ Thứ Hai đến Thứ Sáu.</p>
        <a href="/Pizzas/ListAll" class="btn btn-light btn-lg rounded-pill px-4 shadow-sm mt-3">
            👉 Xem thực đơn ngay
        </a>
    </div>
</section>
<!-- ==== Banner Section ==== -->
<section class="text-center py-5 bg-light">
    <div class="container">
        <h1 class="display-4 fw-bold mb-3">🍕 Welcome to My Pizza Shop!</h1>
        <p class="lead mb-4">Here's our weekly selection of delicious pizzas.</p>
    </div>
</section>

<!-- ==== Search Section ==== -->
<section class="py-4 bg-white border-top">
    <div class="container">
        <form id="searchForm" class="d-flex justify-content-center gap-2 mb-3">
            <input type="text" name="searchTerm" id="searchInput" class="form-control w-50 rounded-pill px-4" placeholder="🔍 Tìm pizza yêu thích..." />
            <button type="submit" class="btn btn-primary rounded-pill px-4">Tìm</button>
        </form>

        <!-- Loading Spinner -->
        <div id="loading" class="text-center my-3" style="display: none;">
            <div class="spinner-border text-primary" role="status">
                <span class="visually-hidden">Loading...</span>
            </div>
        </div>

        <!-- Kết quả AJAX sẽ hiển thị ở đây -->
        <div id="searchResultsContainer"></div>
    </div>
</section>

<!-- ==== Carousel Menu ==== -->
<section class="bg-light py-5">
    <div class="container">
        @await Component.InvokeAsync("CarouselMenu")
    </div>
</section>
<!-- ==== Why Choose Us ==== -->
<section class="py-5 bg-light">
    <div class="container text-center">
        <h2 class="fw-bold mb-5">🌟 Tại sao chọn chúng tôi?</h2>
        <div class="row g-4">
            <div class="col-md-4">
                <i class="fas fa-shipping-fast fa-3x text-danger mb-3"></i>
                <h5 class="fw-bold">Giao hàng nhanh</h5>
                <p class="text-muted">Pizza nóng hổi trong vòng 30 phút.</p>
            </div>
            <div class="col-md-4">
                <i class="fas fa-pizza-slice fa-3x text-danger mb-3"></i>
                <h5 class="fw-bold">Chất lượng tuyệt hảo</h5>
                <p class="text-muted">Nguyên liệu 100% tươi mới, hương vị khó quên.</p>
            </div>
            <div class="col-md-4">
                <i class="fas fa-heart fa-3x text-danger mb-3"></i>
                <h5 class="fw-bold">Khách hàng là trung tâm</h5>
                <p class="text-muted">Sự hài lòng của bạn là ưu tiên số 1.</p>
            </div>
        </div>
    </div>
</section>
<section class="py-5 bg-light">
    <div class="container">
        <h3 class="text-center mb-4 text-primary fw-bold">💬 Đánh giá từ khách hàng</h3>
<!-- ==== Testimonials ==== -->
<section class="py-5 bg-white">
    <div class="container">
        <h2 class="text-center fw-bold mb-5"></h2>
        <div class="row g-4 text-center">
            <div class="col-md-4">
                <blockquote class="blockquote">
                    <p class="mb-0 fst-italic">"Pizza ở đây thực sự tuyệt vời! Tôi đã thử nhiều nơi và đây là số 1."</p>
                    <footer class="blockquote-footer mt-2">Hải, Hà Nội</footer>
                </blockquote>
            </div>
            <div class="col-md-4">
                <blockquote class="blockquote">
                    <p class="mb-0 fst-italic">"Giao hàng rất nhanh và đúng hẹn, pizza còn nóng hổi!"</p>
                    <footer class="blockquote-footer mt-2">Trang, TP.HCM</footer>
                </blockquote>
            </div>
            <div class="col-md-4">
                <blockquote class="blockquote">
                    <p class="mb-0 fst-italic">"Dịch vụ tốt, chất lượng tuyệt vời, chắc chắn sẽ quay lại."</p>
                    <footer class="blockquote-footer mt-2">Linh, Đà Nẵng</footer>
                </blockquote>
            </div>
        </div>
    </div>
</section>
@section Scripts {
            <script>
                $(document).ready(function () {
                    $('#searchForm').submit(function (e) {
                        e.preventDefault(); // Ngăn reload trang

                        var searchTerm = $('#searchInput').val();
                        $('#loading').show();
                        $('#searchResultsContainer').empty();

                        $.ajax({
                            url: '/Pizzas/Search',
                            method: 'GET',
                            data: { searchTerm: searchTerm },
                            success: function (data) {
                                $('#loading').hide();
                                $('#searchResultsContainer').html(data);
                            },
                            error: function () {
                                $('#loading').hide();
                                $('#searchResultsContainer').html('<div class="alert alert-danger">Lỗi khi tìm pizza!</div>');
                            }
                        });
                    });
                });
            </script>
}
