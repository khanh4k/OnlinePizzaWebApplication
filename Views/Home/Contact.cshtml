@model ContactForm
@{
    ViewData["Title"] = "Liên hệ";
}
<style>
    body {
        background: linear-gradient(to right, #74ebd5, #ACB6E5);
        font-family: 'Segoe UI', sans-serif;
    }

    .contact-box {
        background-color: #ffffff;
        border-radius: 20px;
        padding: 40px 30px;
        max-width: 720px;
        margin: 60px auto;
        box-shadow: 0px 15px 30px rgba(0, 0, 0, 0.1);
    }

    .contact-title {
        font-size: 34px;
        font-weight: 700;
        text-align: center;
        margin-bottom: 30px;
        color: #333;
    }

    .form-group label {
        font-weight: 600;
        margin-bottom: 5px;
    }

    .form-control {
        border-radius: 15px;
        padding: 12px 20px;
        border: 1px solid #ccc;
        transition: 0.3s;
    }

        .form-control:focus {
            border-color: #5a9bd8;
            box-shadow: 0 0 0 0.2rem rgba(90, 155, 216, 0.25);
        }

    .input-icon {
        position: absolute;
        left: 15px;
        top: 50%;
        transform: translateY(-50%);
        color: #888;
    }

    .form-floating .form-control {
        padding-left: 45px;
    }

    .btn-send {
        background-color: #007bff;
        color: white;
        font-weight: 600;
        padding: 12px 30px;
        border-radius: 50px;
        border: none;
        transition: 0.3s ease-in-out;
    }

        .btn-send:hover {
            background-color: #0056b3;
        }

    .icon-input-wrapper {
        position: relative;
        margin-bottom: 1.5rem;
    }

    .alert {
        border-radius: 10px;
        font-size: 16px;
    }
</style>

<div class="contact-box">
    <h2 class="contact-title">Liên hệ với chúng tôi</h2>

    @if (ViewBag.SuccessMessage != null)
    {
        <div class="alert alert-success text-center">@ViewBag.SuccessMessage</div>
    }

    <form asp-action="Index" method="post" novalidate>
        <div class="icon-input-wrapper">
            <i class="fa fa-user input-icon"></i>
            <input asp-for="Name" class="form-control" placeholder="Họ và tên" />
            <span asp-validation-for="Name" class="text-danger ms-4 small"></span>
        </div>

        <div class="icon-input-wrapper">
            <i class="fa fa-envelope input-icon"></i>
            <input asp-for="Email" class="form-control" placeholder="Email của bạn" />
            <span asp-validation-for="Email" class="text-danger ms-4 small"></span>
        </div>

        <div class="icon-input-wrapper">
            <i class="fa fa-heading input-icon"></i>
            <input asp-for="Subject" class="form-control" placeholder="Chủ đề" />
            <span asp-validation-for="Subject" class="text-danger ms-4 small"></span>
        </div>

        <div class="icon-input-wrapper">
            <i class="fa fa-comment-dots input-icon"></i>
            <textarea asp-for="Message" class="form-control" rows="5" placeholder="Nội dung liên hệ..."></textarea>
            <span asp-validation-for="Message" class="text-danger ms-4 small"></span>
        </div>

        <div class="text-center mt-4">
            <button type="submit" class="btn btn-send">Gửi liên hệ</button>
        </div>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
