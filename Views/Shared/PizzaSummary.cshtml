@model Pizzas

<div class="col-lg-4 col-md-6 col-sm-12 mb-4">
    <div class="card shadow-sm border-0 rounded-4 h-100"
         style="cursor: pointer;"
         onclick="location.href='@Url.Action("DisplayDetails", "Pizzas", new { id = Model.Id })'">

        <img src="@Model.ImageUrl"
             class="card-img-top"
             alt="Ảnh của @Model.Name"
             style="height: 200px; object-fit: cover;" />

        <div class="card-body d-flex flex-column">
            <h5 class="card-title fw-bold">@Model.Name</h5>
            <p class="card-text flex-grow-1">@Model.Description</p>

            <div class="d-flex justify-content-between align-items-center mt-3">
                <span class="text-success fw-semibold fs-5">
                    @Model.Price.ToString("C")
                </span>
            </div>

            <form asp-controller="ShoppingCart"
                  asp-action="AddToShoppingCart"
                  method="post"
                  class="mt-3">
                <input type="hidden" name="pizzaId" value="@Model.Id" />
                <button type="submit" class="btn btn-primary w-100 rounded-pill">
                    Thêm vào giỏ hàng
                </button>
            </form>
        </div>
    </div>
</div>
