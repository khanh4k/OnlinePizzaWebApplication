    <div class="container">
        <h1 class="display-4 fw-bold mb-3">🍕 Welcome to My Pizza Shop!</h1>
        <p class="lead mb-4">Here's our weekly selection of delicious pizzas.</p>
    </div>
</section>

<!-- ==== Search Section ==== -->
<section class="py-4 bg-white border-top">
    <div class="container">
        <form id="searchForm" class="d-flex justify-content-center gap-2 mb-3" method="get">
            <input type="text" name="searchTerm" class="form-control w-50 rounded-pill px-4" placeholder="🔍 Tìm pizza yêu thích..." />
            <button type="submit" class="btn btn-primary rounded-pill px-4">Tìm</button>
        </form>

