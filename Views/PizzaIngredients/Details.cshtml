@model OnlinePizzaWebApplication.Models.PizzaIngredients

@{
    ViewData["Title"] = "Pizza Ingredient Details";
}

<h2>Pizza Ingredient Details</h2>

<div class="form-horizontal">
    <h4>PizzaIngredients</h4>
    <hr />

    <div class="form-group row">
        <label class="col-sm-2 col-form-label">@Html.DisplayNameFor(model => model.Ingredient)</label>
        <div class="col-sm-10 col-form-label">
            @Html.DisplayFor(model => model.Ingredient.Name)
        </div>
    </div>

    <div class="form-group row">
        <label class="col-sm-2 col-form-label">@Html.DisplayNameFor(model => model.Pizza)</label>
        <div class="col-sm-10 col-form-label">
            @Html.DisplayFor(model => model.Pizza.Name)
        </div>
    </div>
</div>

<div class="form-group mt-3">
    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">Edit</a>
    <a asp-action="Index" class="btn btn-secondary ml-2">Back to List</a>
</div>
