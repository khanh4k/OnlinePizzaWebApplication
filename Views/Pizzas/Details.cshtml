@model Pizzas

@{
    ViewData["Title"] = "Details";
}

<h2>Details</h2>

<div class="form-horizontal">
    <h4>Pizzas</h4>
    <hr />

    <div class="form-group">
        <label class="col-md-2 control-label">@Html.DisplayNameFor(model => model.Name)</label>
        <div class="col-md-10 form-control-static">
            @Html.DisplayFor(model => model.Name)
        </div>
    </div>

    <div class="form-group">
        <label class="col-md-2 control-label">@Html.DisplayNameFor(model => model.Price)</label>
        <div class="col-md-10 form-control-static">
            @Html.DisplayFor(model => model.Price)
        </div>
    </div>

    <div class="form-group">
        <label class="col-md-2 control-label">@Html.DisplayNameFor(model => model.Description)</label>
        <div class="col-md-10 form-control-static">
            @Html.DisplayFor(model => model.Description)
        </div>
    </div>

    @if (!string.IsNullOrEmpty(Model.ImageUrl))
    {
        <div class="form-group">
            <label class="col-md-2 control-label">@Html.DisplayNameFor(model => model.ImageUrl)</label>
            <div class="col-md-10">
                <img src="@Model.ImageUrl" alt="Pizza Image" class="img-thumbnail" style="max-height:150px;" />
            </div>
        </div>
    }

    <div class="form-group">
        <label class="col-md-2 control-label">@Html.DisplayNameFor(model => model.IsPizzaOfTheWeek)</label>
        <div class="col-md-10 form-control-static">
            @Html.DisplayFor(model => model.IsPizzaOfTheWeek)
        </div>
    </div>

    <div class="form-group">
        <label class="col-md-2 control-label">@Html.DisplayNameFor(model => model.Category)</label>
        <div class="col-md-10 form-control-static">
            @Html.DisplayFor(model => model.Category.Name)
        </div>
    </div>
</div>

<div class="form-group row mt-4">
    <div class="offset-md-2 col-md-10">
        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">Edit</a>
        <a asp-action="Index" class="btn btn-secondary ml-2">Back to List</a>
    </div>
</div>

