@model IEnumerable<Order>

@{
    var pageName = "Đơn hàng";
    ViewData["Title"] = pageName;
}

<div class="container my-5">
    <div class="card shadow-sm rounded-4" style="background-color: #ffffff; border: 1px solid #ffffff;">
        <div class="card-header text-dark d-flex justify-content-between align-items-center" style="background-color: #ffffff; border-bottom: 1px solid #ffffff;">
            <h3 class="mb-0">@pageName</h3>
            <span class="badge bg-dark text-white">Tổng: @Model.Count() đơn</span>
        </div>

        <div class="card-body">
            @if (!Model.Any())
            {
                <div class="alert alert-warning text-center" role="alert">
                    <h5>Chưa có đơn hàng nào được tạo.</h5>
                </div>
            }
            else
            {
                <div class="table-responsive">
                    <table class="table table-hover align-middle" style="background-color: #ffffff; border: 1px solid #ffffff;">
                        <thead style="background-color: #f8f9fa; color: #000; border-bottom: 1px solid #ccc;">
                            <tr>
                                <th>Họ</th>
                                <th>Tên</th>
                                <th>Địa chỉ</th>
                                <th>Mã Bưu Chính</th>
                                <th>Thành phố</th>
                                <th>Bang/Tỉnh</th>
                                <th>Quốc gia</th>
                                <th>SĐT</th>
                                <th>Tổng đơn</th>
                                <th>Ngày đặt</th>
                                <th>Email</th>
                                <th>Tài khoản</th>
                                <th class="text-center">Hành động</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.FirstName</td>
                                    <td>@item.LastName</td>
                                    <td>@item.AddressLine1</td>
                                    <td>@item.ZipCode</td>
                                    <td>@item.City</td>
                                    <td>@item.State</td>
                                    <td>@item.Country</td>
                                    <td>@item.PhoneNumber</td>
                                    <td>@item.OrderTotal.ToString("c")</td>
                                    <td>@item.OrderPlaced.ToString("dd/MM/yyyy HH:mm")</td>
                                    <td>@item.Email</td>
                                    <td>@item.User?.Email</td>
                                    <td class="text-center">
                                        <a asp-action="Details" asp-route-id="@item.OrderId" class="btn btn-sm btn-outline-info rounded-pill me-1">
                                            <i class="bi bi-eye"></i> Xem
                                        </a>
                                        <a asp-action="Delete" asp-route-id="@item.OrderId" class="btn btn-sm btn-outline-danger rounded-pill">
                                            <i class="bi bi-trash"></i> Xoá
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
        </div>
    </div>
</div>
