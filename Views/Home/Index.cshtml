@model IEnumerable<Pizzas>

@{
    ViewData["Title"] = "Home Page";
}
<style>
    .promo-blink {
        animation: gradientShift 8s ease infinite alternate;
    }

    .animate-blink {
        animation: blinkText 1s infinite alternate;
    }

    @keyframes blinkText {
        0%

    {
        opacity: 1;
    }

    100% {
        opacity: 0.7;
    }

    }

    @keyframes gradientShift {
        0%

    {
        background: linear-gradient(to right, #ff416c, #ff4b2b);
    }

    100% {
        background: linear-gradient(to right, #ff4b2b, #ff416c);
    }

    <style >
    .review-marquee {
        position: relative;
        height: 100px;
    }

    .review-track {
        animation: scrollReviews 30s linear infinite;
        white-space: nowrap;
    }

    .review-item {
        min-width: 300px;
        font-weight: 500;
        color: #333;
        background-color: #fff9f0;
    }

    @keyframes scrollReviews {
        0%

    {
        transform: translateX(0);
    }

    100% {
        transform: translateX(-50%);
    }

    }
</style>
<!-- ==== Promo Section ==== -->
<section class="py-5 text-white text-center promo-blink" style="background: linear-gradient(to right, #ff416c, #ff4b2b);">
    <div class="container">
        <h2 class="fw-bold mb-3 animate-blink">🎁 Ưu đãi hấp dẫn trong tuần!</h2>
        <p class="lead">Mua 1 tặng 1 cho tất cả pizza size L từ Thứ Hai đến Thứ Sáu.</p>
        <a href="/Pizzas/ListAll" class="btn btn-light btn-lg rounded-pill px-4 shadow-sm mt-3">
            👉 Xem thực đơn ngay
        </a>
    </div>
</section>
<!-- ==== Banner Section ==== -->
